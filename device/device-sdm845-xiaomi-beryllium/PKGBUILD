    "https://gitlab.com/postmarketOS/pmaports/-/raw/${_commit_conf}/device/community/device-xiaomi-beryllium/q6voiced.conf"
    xiaomi-beryllium.conf
    machine-info
    rootston.ini
)
sha256sums=(
