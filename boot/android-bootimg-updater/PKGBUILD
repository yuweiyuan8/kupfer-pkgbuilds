_mode=cross
_nodeps=true
pkgname=boot-android-bootimg-updater
pkgver=0.5
pkgrel=1
_arches=all
arch=(
    aarch64
    x86_64
)
license=(MIT)
depends=(
    mkbootimg-git
    boot-deploy
)
install=android-bootimg-updater.install
source=(
    91-linux.hook
    update-bootimg.sh
)
sha256sums=(
    f1bb3432f8be432f226baf638069689faad1b77e770d4df04e5ffa836d296774
    832ed430eee36ad4794d1a63d1e23a1c66959cce6b12f283d17e362da8be807e
)

package() {
    install -Dm644 "$srcdir"/91-linux.hook "${pkgdir}/usr/share/libalpm/hooks/91-${pkgname}.hook"
    install -Dm755 "$srcdir"/update-bootimg.sh "$pkgdir"/usr/bin/update-bootimg
}
